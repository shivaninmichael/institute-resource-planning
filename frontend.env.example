# =====================================================
# OpenEducat ERP Frontend - Environment Variables
# Copy this file to .env and update the values
# =====================================================

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_USE_SUPABASE_AUTH=false

# Supabase Configuration (if using Supabase auth)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# Application Configuration
REACT_APP_APP_NAME=OpenEducat ERP
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=
REACT_APP_STRIPE_PUBLISHABLE_KEY=
REACT_APP_SENTRY_DSN=

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination Configuration
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Cache Configuration
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_CACHE=true
